<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="csrf-token" content="<%= csrfToken %>">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <title><%= judul %></title>
  <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
  <script src="/js/jquery-1.11.2.min.js"></script>
  <%- include('../partials/auth_page/css_login'); %>
</head>

<body class="login-page bg-login">
  <div class="login-box set-box-card">
    <div class="card set-heigh-box">
      <div class="body">
        <form id="sign_in">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">person</i>
            </span>
            <div class="form-line">
              <input type="text" class="form-control" name="username" id="username" placeholder="Username" required autofocus>
            </div>
          </div>
          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">lock</i>
            </span>
            <div class="form-line">
              <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-4 set-center-position">
              <button class="btn bg-light-blue btn-circle-lg waves-effect waves-circle waves-float hoverable" type="submit"><i class="material-icons">lock</i></button>
            </div>
          </div>
          <div class="row m-t-15 m-b--20">
            <div class="col-xs-6 set-center-position">
              <a href="javascript:void(0)" id="register">Sign Up !</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('../partials/auth_page/js_login'); %>
  <script>
    $(document).ready(function() {
      $('#sign_in').validate({
        highlight: function(input) {
          $(input).parents('.form-line').addClass('error');
        },
        unhighlight: function(input) {
          $(input).parents('.form-line').removeClass('error');
        },
        errorPlacement: function(error, element) {
          $(element).parents('.input-group').append(error);
        }
      });

      $('#register').click(function() {
        window.location.replace('/auth/register');
      });
    });




    $('#sign_in').on('submit', function(event) {
      event.preventDefault();
      const csrfToken = $('meta[name="csrf-token"]').attr('content');
      let username = $('#username').val();
      let password = $('#password').val();

      $.ajax({
        headers: {
          'X-CSRF-TOKEN': csrfToken
        },
        url: "/do_action_login",
        dataType: 'json',
        type: "POST",
        data: {
          "_token": csrfToken,
          username: username,
          password: password
        },
        success: function(data) {
          if (data.code === 200) {
            Swal.fire({
              title: "Success",
              text: data.msg,
              icon: "success",
              confirmButtonText: "Ok"
            }).then((result) => {
              /* Read more about isConfirmed, isDenied below */
              if (result.isConfirmed) {
                window.location.href = '/' + data.dlink;
              } else {
                result.dismiss;
              }
            });
          } else {
            Swal.fire({
              position: 'center',
              icon: 'error',
              title: data.msg,
              showConfirmButton: true,
              timer: 2500
            });
          }
        }
      })
    });
  </script>
</body>

</html>